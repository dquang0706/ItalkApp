<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:background="@drawable/dialog_background"
    android:layout_height="250dp">
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/languageTv"
        android:textSize="17dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/greynhat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/language"/>
    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/enlishLayout"
        android:layout_marginTop="20dp"
        android:layout_below="@id/languageTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/languageIv"
            android:src="@drawable/ic_english"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_toRightOf="@id/languageIv"
            android:text="English"
            android:textSize="17dp"
            android:textColor="@color/blackNhat2"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="60dp"
        android:background="@color/greynhat4"
        android:layout_below="@id/enlishLayout"
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"/>
    <RelativeLayout
    android:id="@+id/vietNamLayout"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="30dp"
    android:layout_below="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/language2Iv"
        android:src="@drawable/ic_vietnam"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:text="Viá»‡t Nam"
        android:textColor="@color/blackNhat2"
        android:textSize="17dp"
        android:layout_marginLeft="20dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/language2Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp"
        android:background="@color/greynhat4"
        android:layout_below="@id/vietNamLayout"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"/>
    <RelativeLayout
        android:id="@+id/KoreaLayout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/KoreaIv"
            android:src="@drawable/korean_image"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:text="Korea"
            android:textColor="@color/blackNhat2"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/KoreaIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/cancelBtn"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="70dp"
        android:gravity="center"
        android:layout_height="30dp">
        <TextView
            android:text="@string/cancel"
            android:textColor="@color/pink"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_transparent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/mnametv"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="@string/change_password"
        android:inputType="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/oldpasswordElt"
        app:passwordToggleEnabled="true"
        app:hintEnabled="false"
        android:layout_marginTop="20dp"
        android:layout_below="@id/mnametv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/oldpasswordEt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt2"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_key_white"
            android:drawableStart="@drawable/ic_key_white"
            android:drawablePadding="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:hint="@string/enter_your_old_password"/>
    </com.google.android.material.textfield.TextInputLayout>
     <com.google.android.material.textfield.TextInputLayout
         android:id="@+id/newpasswordElt"
         app:passwordToggleEnabled="true"
         app:hintEnabled="false"
         android:layout_marginTop="20dp"
         android:layout_below="@id/oldpasswordElt"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <EditText
             android:id="@+id/newpasswordEt"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/edt2"
             android:inputType="textPassword"
             android:drawableLeft="@drawable/ic_key_white"
             android:drawableStart="@drawable/ic_key_white"
             android:drawablePadding="20dp"
             android:paddingLeft="8dp"
             android:paddingRight="12dp"
             android:paddingTop="10dp"
             android:paddingBottom="10dp"
             android:hint="@string/enter_your_new_password"/>
     </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_below="@id/newpasswordElt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/greynhat2"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/cancelBtn"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cancelTv"
                    android:layout_margin="15dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:text="@string/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_gravity="center_horizontal"
                android:background="@color/greynhat2"
                android:layout_width="0.2dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/updateBtn"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/updatetv"
                    android:layout_margin="15dp"
                    android:textSize="15dp"
                    android:textColor="@color/blackNhat2"
                    android:text="@string/update"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>